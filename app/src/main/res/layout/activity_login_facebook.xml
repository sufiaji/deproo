<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_button_fbconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/com_facebook_blue"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Masuk Menggunakan Facebook"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onLoginClick"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/id_button_fbconfirm"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:text="Deproo akan mengakses Profile Facebook dan Email Anda"/>

</RelativeLayout>
