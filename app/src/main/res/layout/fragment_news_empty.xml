<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_img_empty_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dimen_100dp"
        android:src="@drawable/empty_chat"/>

    <TextView
        android:layout_below="@id/id_img_empty_chat"
        android:layout_marginTop="@dimen/dimen_minus_100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Tidak ada diskusi saat ini..."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</RelativeLayout>
