<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/id_img_profile"
                android:layout_width="@dimen/dimen_160dp"
                android:layout_height="@dimen/dimen_160dp"
                android:layout_margin="@dimen/dimen_20dp"
                android:clickable="true"
                android:onClick="onPicClick"
                android:src="@drawable/broker_fake" />
        </LinearLayout>

        <ImageView
            android:id="@+id/id_img_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:src="@drawable/workdesk"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:visibility="gone"
            android:onClick="onBgClick" />

        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:text="UBAH BIODATA"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Nama" />

            <EditText
                android:id="@+id/id_edit_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textSize="14sp"
                android:inputType="textCapWords"
                android:hint="Nama Anda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Email" />

            <EditText
                android:id="@+id/id_edit_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:hint="misal: abc@xyz.com" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="*perubahan email akan memerlukan verifikasi lagi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Nomor Telepon" />

            <EditText
                android:id="@+id/id_edit_profile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textSize="14sp"
                android:inputType="phone"
                android:hint="misal: 0819899444" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Jenis Kelamin" />

            <Spinner
                android:id="@+id/id_spinner_gender"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Kota" />

            <EditText
                android:id="@+id/id_edit_profile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:hint="Kota tempat tinggal Anda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Propinsi" />

            <EditText
                android:id="@+id/id_edit_profile_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:hint="Propinsi tempat tinggal Anda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Alamat" />

            <EditText
                android:id="@+id/id_edit_profile_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:hint="Tuliskan alamat lengkap Anda" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:text="UBAH PROFILE"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Deskripsi diri singkat" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="60"
                app:counterOverflowTextAppearance="@style/MyOverflowText">

                <EditText
                    android:id="@+id/id_edit_profile_bio1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dimen_10dp"
                    android:textSize="14sp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:hint="Contoh: Spesialis Apartemen di Jakarta Barat"
                     />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:textStyle="bold"
                android:text="Deskripsi diri lengkap" />

            <EditText
                android:id="@+id/id_edit_profile_bio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp"
                android:textSize="14sp"
                android:inputType="textMultiLine|textCapSentences"
                android:hint="Tuliskan deskripsi diri lengkap mengenai keahlian Anda yang bisa menunjang keberhasilan iklan dan penjualan properti Anda di Deproo" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:background="@color/colorPrimary"
            android:onClick="onSaveProfileClick"
            android:text="Simpan Profile"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_10dp"/>

    </LinearLayout>

</ScrollView>
