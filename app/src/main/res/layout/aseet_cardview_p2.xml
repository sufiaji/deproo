<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/id_card1_numbeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:text="  4"
        android:textSize="14sp"
        android:textColor="@color/gray898989"
        android:drawableLeft="@drawable/ic_deproo_bedroom"
        app:fontFamily="@font/lato_black" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/id_card1_numbaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="32dp"
        android:text="  3"
        android:textSize="14sp"
        android:textColor="@color/gray898989"
        android:drawableLeft="@drawable/ic_deproo_bathroom"
        app:fontFamily="@font/lato_black" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/id_card1_numgarage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="32dp"
        android:text="  2"
        android:textSize="14sp"
        android:textColor="@color/gray898989"
        android:drawableLeft="@drawable/ic_deproo_garage"
        app:fontFamily="@font/lato_black" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/id_card1_numfloor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="32dp"
        android:text="  2"
        android:textSize="14sp"
        android:textColor="@color/gray898989"
        android:drawableLeft="@drawable/ic_deproo_floor"
        app:fontFamily="@font/lato_black" />


</LinearLayout>
