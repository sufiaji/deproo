<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_asset_detail_card2_p"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_card2_numbed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="  3"
            android:gravity="center_vertical"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_bedroom"/>

        <TextView
            android:id="@+id/id_card2_numbath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="  2"
            android:gravity="center_vertical"
            android:fontFamily="@font/lato_bold"

            android:drawableLeft="@drawable/ic_deproo_bathroom"/>

        <TextView
            android:id="@+id/id_card2_numgarage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center_vertical"
            android:text="   1"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_garage"/>

        <TextView
            android:id="@+id/id_card2_numfloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="  1"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_floor"/>

        <TextView
            android:id="@+id/id_card2_harea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="  1000m2"
            android:fontFamily="@font/lato_bold"

            android:drawableLeft="@drawable/ic_deproo_harea"/>

        <TextView
            android:id="@+id/id_card2_larea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="  1000m2"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_area"/>

        <TextView
            android:id="@+id/id_card2_electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="6000Watt"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_electric"/>

        <TextView
            android:id="@+id/id_card2_shm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="  SHM"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_shm"/>

    </LinearLayout>
    </HorizontalScrollView>

</androidx.cardview.widget.CardView>
