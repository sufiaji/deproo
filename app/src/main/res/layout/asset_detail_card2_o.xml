<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_asset_detail_card2_o"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_card2_numgarage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="   1"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_garage"/>

        <TextView
            android:id="@+id/id_card2_numfloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="  1"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_floor"/>

        <TextView
            android:id="@+id/id_card2_harea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="  1000m2"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_harea"/>

        <TextView
            android:id="@+id/id_card2_electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="6000Watt"
            android:fontFamily="@font/lato_bold"
            android:drawableLeft="@drawable/ic_deproo_electric"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
